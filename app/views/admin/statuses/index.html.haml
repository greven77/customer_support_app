#new_status_button
  = link_to 'Create New Status', new_admin_status_path, :class => "btn btn-primary", :role => "button"
%table#statuses_table
  %thead
    %td Description
    %td Edit
    %td Delete
  %tbody
    - @statuses.each do |status|
      %tr
        %td= status.description
        %td
          = link_to edit_admin_status_path(status), :id => "edit_#{status.description.parameterize}" do
            %span.glyphicon.glyphicon-pencil
        %td
          = link_to admin_status_path(status), :id => "delete_#{status.description.parameterize}", :method => :delete do
            %span.glyphicon.glyphicon-remove


